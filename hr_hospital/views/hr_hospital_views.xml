<odoo>
<!-- region Visits -->
    <record id="hr_hospital_visits_list" model="ir.ui.view">
        <field name="name">hr.hospital.visits.list</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="disease_id"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_visits_form" model="ir.ui.view">
        <field name="name">hr.hospital.visits.form</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="doctor_id"/>
                            <field name="patient_id"/>
                            <field name="disease_id"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_visits_window" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visits</field>
        <field name="view_mode">list,form</field>
    </record>
<!-- endregion -->

<!--    region  Diseases        -->
    <record id="hr_hospital_diseases_list" model="ir.ui.view">
        <field name="name">hr.hospital.diseases.list</field>
        <field name="model">hr.hospital.diseases</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_diseases_form" model="ir.ui.view">
        <field name="name">hr.hospital.diseases.form</field>
        <field name="model">hr.hospital.diseases</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_diseases_window" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.diseases</field>
        <field name="view_mode">list,form</field>
    </record>
<!-- endregion -->

<!--region        Doctors   -->
    <record id="hr_hospital_doctors_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctors.list</field>
        <field name="model">hr.hospital.doctors</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="full_name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_doctors_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctors.form</field>
        <field name="model">hr.hospital.doctors</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="patronymic"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_doctors_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctors</field>
        <field name="view_mode">list,form</field>
    </record>
<!-- endregion -->

<!-- region         Patients          -->
    <record id="hr_hospital_patients_list" model="ir.ui.view">
        <field name="name">hr.hospital.patients.list</field>
        <field name="model">hr.hospital.patients</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="full_name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="primaryDoctor_id"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_patients_form" model="ir.ui.view">
        <field name="name">hr.hospital.patients.form</field>
        <field name="model">hr.hospital.patients</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group string="Base">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="patronymic"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="primaryDoctor_id"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Additional">
                            <field name="passport"/>
                            <field name="contact"/>
                            <field name="bloodGroup"/>
                            <field name="allergies"/>
                            <field name="insurance"/>
                            <field name="insurancePolicy"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_patients_window" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patients</field>
        <field name="view_mode">list,form</field>
    </record>
<!-- endregion -->
</odoo>
