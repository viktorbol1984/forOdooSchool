<odoo>
    <!-- region Visits -->
    <record id="hr_hospital_visits_list" model="ir.ui.view">
        <field name="name">hr.hospital.visits.list</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="disease_id"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_visits_form" model="ir.ui.view">
        <field name="name">hr.hospital.visits.form</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"
                           options="{'clickable': True}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="doctor_id"/>
                            <field name="patient_id"/>
                            <field name="disease_id"/>
                            <field name="description"/>
                            <field name="plan_datetime"/>
                            <field name="fact_datetime"/>
                            <field name="diagnoses_count"/>
                            <field name="mentor_doctor_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagnosis">
                            <field name="diagnosis_ids">
                                <list editable="bottom">
                                    <field name="visit_id"/>
                                    <field name="disease_id"/>
                                    <field name="diagnos_description"/>
                                    <field name="approved_by_doctor_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_visits_calendar" model="ir.ui.view">
        <field name="name">hr.hospital.visits.calendar</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <calendar date_start="plan_datetime"
                      create="1" quick_create="1"
                      mode="month" scales="day,month,year"
                      create_name_field="description" color="name"
                      string="Visits">
                <field name="name"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="status"/>
            </calendar>
        </field>
    </record>

    <record id="hr_hospital_visits_search" model="ir.ui.view">
        <field name="name">hr.hospital.visits.search</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <search string="Visits">
                <searchpanel>
                    <field name="doctor_id"/>
                    <field name="patient_id"/>
                    <field name="status"/>
                </searchpanel>
                <field name="name"/>
                <filter string="Current Month" name="current_month"
                        domain="[('plan_datetime','&gt;=', context_today().strftime('%Y-%m-01')), ('plan_datetime','&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="Scheduled" name="scheduled"
                        domain="[('status', '=', 'scheduled')]"/>
                <filter string="Completed" name="completed"
                        domain="[('status', '=', 'completed')]"/>
                <filter string="Cancelled" name="cancelled"
                        domain="[('status', '=', 'cancelled')]"/>
                <filter string="No Show" name="no_show"
                        domain="[('status', '=', 'no_show')]"/>
                <separator/>
                <filter string="Group by Status" name="group_by_status"
                        context="{'group_by': 'status'}"/>
            </search>
        </field>
    </record>

    <record id="hr_hospital_visits_pivot" model="ir.ui.view">
        <field name="name">hr.hospital.visits.pivot</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <pivot string="Visits">
                <field name="doctor_id" type="row"/>
                <field name="status" type="col"/>
                <field name="visit_count" type="measure" operator="sum"/>
            </pivot>
        </field>
    </record>

    <record id="action_hr_hospital_visits_window" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visits</field>
        <field name="view_mode">list,calendar,pivot,form</field>
    </record>

    <record id="action_hr_hospital_visits_new" model="ir.actions.act_window">
        <field name="name">New Visit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visits</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_hospital_visits_form"/>
        <field name="target">new</field>
    </record>
    <!-- endregion -->

    <!--    region  Diseases        -->
    <record id="hr_hospital_diseases_list" model="ir.ui.view">
        <field name="name">hr.hospital.diseases.list</field>
        <field name="model">hr.hospital.diseases</field>
        <field name="arch" type="xml">
            <list string="Diseases">
                <field name="parent_id"/>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_diseases_form" model="ir.ui.view">
        <field name="name">hr.hospital.diseases.form</field>
        <field name="model">hr.hospital.diseases</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="icd10_code"/>
                            <field name="severity"/>
                            <field name="is_contagious"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="symptoms"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <group string="Affected Regions">
                        <field name="affected_country_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_diseases_search" model="ir.ui.view">
        <field name="name">hr.hospital.diseases.search</field>
        <field name="model">hr.hospital.diseases</field>
        <field name="arch" type="xml">
            <search string="Diseases">
                <field name="name"/>
                <searchpanel>
                    <field name="parent_id" hierarchize="1"/>
                    <field name="severity"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_hr_hospital_diseases_window" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.diseases</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="hr_hospital_diseases_search"/>
    </record>
    <!-- endregion -->

    <!--region        Doctors   -->
    <record id="hr_hospital_doctors_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctors.list</field>
        <field name="model">hr.hospital.doctors</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="full_name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_doctors_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctors.form</field>
        <field name="model">hr.hospital.doctors</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <group string="Base">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="patronymic"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="active"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Add">
                            <field name="user_id"/>
                            <field name="speciality_id"/>
                            <field name="is_intern"/>
                            <field name="mentor_doctor_id"/>
                            <field name="license_number"/>
                            <field name="license_issue_date"/>
                            <field name="years_of_experience"/>
                            <field name="rating"/>
                            <field name="education_country_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Work Schedule">
                            <field name="schedule_ids">
                                <list editable="bottom">
                                    <field name="date"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctors_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctors.search</field>
        <field name="model">hr.hospital.doctors</field>
        <field name="arch" type="xml">
            <search string="Doctors">
                <filter name="is_mentor"
                        string="Ментори"
                        domain="[('is_intern', '=', False)]"/>
                <filter name="is_intern"
                        string="Інтерни"
                        domain="[('is_intern', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="hr_hospital_doctors_interns_mentorship_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctors.interns.mentorship.kanban</field>
        <field name="model">hr.hospital.doctors</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="mentor_group_label">
                <field name="name"/>
                <field name="full_name"/>
                <field name="mentor_doctor_id"/>
                <field name="mentor_group_label"/>
                <field name="speciality_id"/>
                <templates>
                    <t t-name="card">
                        <div>
                            <strong>
                                <field name="full_name"/>
                            </strong>
                            <div>
                                <field name="speciality_id"/>
                            </div>
                            <div>
                                <button type="action"
                                        name="%(action_hr_hospital_visits_new)d"
                                        string="New Visit"
                                        class="btn btn-primary btn-sm"
                                        context="{'default_doctor_id': id, 'default_status': 'scheduled'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hr_hospital_doctors_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctors</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="hr_hospital_doctors_search"/>
    </record>

    <!-- endregion -->

    <!-- region         Patients          -->
    <record id="hr_hospital_patients_list" model="ir.ui.view">
        <field name="name">hr.hospital.patients.list</field>
        <field name="model">hr.hospital.patients</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="full_name"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="primaryDoctor_id"/>
                <field name="phone" widget="phone"/>
                <field name="email" widget="email"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_patients_form" model="ir.ui.view">
        <field name="name">hr.hospital.patients.form</field>
        <field name="model">hr.hospital.patients</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_hr_hospital_visits_window)d"
                            type="action"
                            string="Visits"
                            icon="fa-calendar"
                            context="{'searchpanel_default_patient_id': id}"/>
                    <button name="%(action_hr_hospital_visits_new)d"
                            type="action"
                            string="New Visit"
                            icon="fa-plus"
                            context="{'default_patient_id': id, 'default_doctor_id': primaryDoctor_id, 'default_status': 'scheduled'}"
                            target="new"
                            view_mode="form"/>
                </header>
                <sheet>
                    <group>
                        <group string="Base">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="last_name"/>
                            <field name="first_name"/>
                            <field name="patronymic"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="age"/>
                            <field name="primaryDoctor_id"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="country_id"/>
                            <field name="lang_id"/>
                        </group>
                        <group string="Additional">
                            <field name="passport"/>
                            <field name="contact"/>
                            <field name="bloodGroup"/>
                            <field name="allergies"/>
                            <field name="insurance"/>
                            <field name="insurancePolicy"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Diagnosis History">
                            <field name="diagnosis_history_ids">
                                <list>
                                    <field name="visit_id"/>
                                    <field name="disease_id"/>
                                    <field name="diagnos_description"/>
                                    <field name="prescribed_treatment"/>
                                    <field name="is_approved"/>
                                    <field name="approved_by_doctor_id"/>
                                    <field name="approval_date"/>
                                    <field name="severity"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patients_search" model="ir.ui.view">
        <field name="name">hr.hospital.patients.search</field>
        <field name="model">hr.hospital.patients</field>
        <field name="arch" type="xml">
            <search string="Filter">
                <searchpanel>
                </searchpanel>
                <field name="full_name"/>
                <field name="phone"/>
            </search>
        </field>
    </record>

    <record id="action_hr_hospital_patients_window" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patients</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- endregion -->

    <!-- region         History          -->
    <record id="action_hr_hospital_patient_doctor_history_window" model="ir.actions.act_window">
        <field name="name">History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient.doctor.history</field>
        <field name="view_mode">list,form</field>
    </record>
    <!-- endregion -->

    <!-- region         Diagnosis          -->
    <record id="hr_hospital_medical_diagnosis_list" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.list</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <list>
                <field name="visit_id"/>
                <field name="disease_id"/>
                <field name="diagnos_description"/>
                <field name="prescribed_treatment"/>
                <field name="is_approved"/>
                <field name="approved_by_doctor_id"/>
                <field name="approval_date"/>
                <field name="severity"/>
            </list>
        </field>
    </record>

    <record id="hr_hospital_medical_diagnosis_pivot" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.pivot</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <pivot string="Diagnosis">
                <field name="disease_id" type="row"/>
                <field name="severity" type="row"/>
                <field name="create_date" type="col" interval="year"/>
                <field name="create_date" type="col" interval="month"/>
                <field name="diagnosis_count" type="measure" operator="sum"/>
            </pivot>
        </field>
    </record>

    <record id="hr_hospital_medical_diagnosis_graph" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.graph</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <graph string="Diagnosis by Disease and Month" type="bar">
                <field name="create_date" interval="month"/>
                <field name="disease_id"/>
                <field name="diagnosis_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_hr_hospital_hr_hospital_medical_diagnosis_window" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.medical.diagnosis</field>
        <field name="view_mode">list,pivot,graph,form</field>
    </record>
    <!-- endregion -->
</odoo>
