<odoo>
    <record id="view_hr_hospital_patient_card_export_wizard" model="ir.ui.view">
        <field name="name">hr.hospital.patient.card.export.wizard.form</field>
        <field name="model">hr.hospital.patient.card.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Patient Card Export">
                <group>
                    <field name="patient_id"/>
                    <field name="report_lang_id"/>
                    <field name="export_format"/>
                </group>
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <group string="Include">
                    <field name="include_diagnoses"/>
                    <field name="include_recommendations"/>
                </group>
                <footer>
                    <button string="Export" type="object" name="action_export" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_patient_card_export_wizard" model="ir.actions.act_window">
        <field name="name">Patient Card Export Wizard</field>
        <field name="res_model">hr.hospital.patient.card.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_patients"/>
        <field name="binding_type">action</field>
    </record>
</odoo>
