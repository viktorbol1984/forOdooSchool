<odoo>
    <record id="view_hr_hospital_diagnosis_report_wizard" model="ir.ui.view">
        <field name="name">hr.hospital.diagnosis.report.wizard.form</field>
        <field name="model">hr.hospital.diagnosis.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Diagnosis Report">
                <group>
                    <field name="doctor_ids" widget="many2many_tags"/>
                    <field name="disease_ids" widget="many2many_tags"/>
                </group>
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="action_generate" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_diagnosis_report_wizard" model="ir.actions.act_window">
        <field name="name">Diagnosis Report</field>
        <field name="res_model">hr.hospital.diagnosis.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_doctors"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>
