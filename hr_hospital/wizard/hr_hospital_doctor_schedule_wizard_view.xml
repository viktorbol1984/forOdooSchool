<odoo>
    <record id="view_hr_hospital_doctor_schedule_wizard" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.schedule.wizard.form</field>
        <field name="model">hr.hospital.doctor.schedule.wizard</field>
        <field name="arch" type="xml">
            <form string="Doctor Schedule">
                <group>
                    <field name="doctor_id"/>
                    <field name="week_start"/>
                    <field name="weeks_count"/>
                    <field name="schedule_type"/>
                </group>
                <group string="Days">
                    <field name="monday"/>
                    <field name="tuesday"/>
                    <field name="wednesday"/>
                    <field name="thursday"/>
                    <field name="friday"/>
                    <field name="saturday"/>
                    <field name="sunday"/>
                </group>
                <group string="Time">
                    <field name="time_start"/>
                    <field name="time_end"/>
                    <field name="break_start"/>
                    <field name="break_end"/>
                </group>
                <footer>
                    <button string="Apply" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_doctor_schedule_wizard" model="ir.actions.act_window">
        <field name="name">Doctor Schedule</field>
        <field name="res_model">hr.hospital.doctor.schedule.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
